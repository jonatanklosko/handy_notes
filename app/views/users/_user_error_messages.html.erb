<% if @user.errors.any? %>
  <div class="error-messages-box">
    <strong>
      Your form contains <%= pluralize @user.errors.count, "error" %>
    </strong>
    <ul class="error-messages">
      <% @user.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>